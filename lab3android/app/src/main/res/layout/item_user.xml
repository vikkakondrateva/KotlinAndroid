<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="@color/itemBackgroundColor"
    android:layout_margin="8dp"
    android:elevation="2dp">

    <!-- Аватар пользователя -->
    <ImageView
        android:id="@+id/avatarImageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@android:drawable/ic_menu_gallery"
        android:background="@color/buttonColor"
        android:scaleType="centerCrop"
        android:layout_marginEnd="16dp"/>

    <!-- Информация о пользователе -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- ФИО пользователя -->
        <TextView
            android:id="@+id/userNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Фамилия Имя Отчество"
            android:textSize="18sp"
            android:textColor="@color/textColor"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"/>

        <!-- Строка с логином и статусом администратора -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Логин -->
            <TextView
                android:id="@+id/loginTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="mylogin"
                android:textSize="14sp"
                android:textColor="@color/textColorL"
                android:layout_marginEnd="8dp"/>

            <!-- Статус администратора - ТЕПЕРЬ СПРАВА ОТ ЛОГИНА -->
            <TextView
                android:id="@+id/adminStatusTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Администратор"
                android:textSize="12sp"
                android:textColor="@color/textColorAdm"
                android:background="@color/backgroundAdm"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp"
                android:visibility="gone"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>